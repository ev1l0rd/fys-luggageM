            <children>
            <HBox alignment="CENTER_RIGHT" maxWidth="400.0" prefWidth="400.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleCloseAction" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/back_button.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
                <Label maxWidth="400.0" minWidth="400.0" prefWidth="400.0" text="Naam:">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox maxWidth="400.0" minWidth="400.0" prefWidth="400.0">
                    <children>
                        <TextField fx:id="firstNameField" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
                        <TextField fx:id="prepositionField" maxWidth="80.0" minWidth="80.0" prefWidth="80.0">
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="lastNameField" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>
                <Label maxWidth="400.0" minWidth="400.0" prefWidth="400.0" text="Adres:">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="adresField" maxWidth="400.0" minWidth="400.0" prefWidth="400.0">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>
                <Label maxWidth="400.0" minWidth="400.0" prefWidth="400.0" text="Stad en postcode:">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox maxWidth="400.0" minWidth="400.0" prefWidth="400.0">
                    <children>
                        <TextField fx:id="cityField" maxWidth="245.0" minWidth="245.0" prefWidth="245.0" />
                        <TextField fx:id="postalCodeField" maxWidth="145.0" minWidth="145.0" prefWidth="145.0">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </HBox>
                <Label maxWidth="400.0" minWidth="400.0" prefWidth="400.0" text="Land:">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="countryField" maxWidth="400.0" minWidth="400.0" prefWidth="400.0">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>
                <Label maxWidth="400.0" minWidth="400.0" prefWidth="400.0" text="Telefoonnummer:">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="phoneNumberField" maxWidth="400.0" minWidth="400.0" prefWidth="400.0">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>
                <Label maxWidth="400.0" minWidth="400.0" prefWidth="400.0" text="Emailadres:">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="emailAdresField" maxWidth="400.0" minWidth="400.0" prefWidth="400.0">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>
                <HBox alignment="TOP_RIGHT" maxWidth="400.0" minWidth="400.0" prefWidth="400.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleSaveAction" text="Aanmaken">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
